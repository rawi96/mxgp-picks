datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String             @id @default(uuid())
  email              String             @unique
  username           String             @unique
  score              Int                @default(0)
  password           String
  isAdmin            Boolean
}

model Rider {
  id                 String             @id @default(uuid())
  firstname          String         
  lastname           String             
  numberplate        Int          
}